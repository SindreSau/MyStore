@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MyStore_Entity_Week4.Models.Item

<div class="card h-auto p-2" style="width: 18rem;">
    <div class="d-flex flex-column h-100">
        <img class="card-img-top" alt="@Model.Name image" src="@Model.ImageUrl" style="object-fit: cover; height: 200px;"/>
        <div class="card-body d-flex flex-column mt-auto">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            <p class="card-text mt-auto">
                <strong>@Model.Price.ToString("C")</strong>
            </p>
        </div>
        <div class="card-footer bg-transparent border-top-0">
            <a href="Details/@Model.ItemId" class="btn btn-primary stretched-link">View Details</a>
        </div>
    </div>
</div>